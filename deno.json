{
  "tasks": {
    "dev": "mode=dev deno run -A --no-check --unstable --location http://localhost:8000 server.ts",
    "start": "disableStreaming=1 url=https://ultra-mdx.fly.dev deno run -A --no-check --unstable --location https://ultra-mdx.fly.dev server.ts",
    "cache": "deno cache --reload --no-check server.ts",
    "vendor": "importMap=importMap.json deno run -A --unstable --no-check https://deno.land/x/ultra@v0.8.2/vendor.ts"
  },
  "importMap": "importMap.json",
  "lint": {
    "files": {
      "exclude": [".ultra/"]
    }
  },
  "fmt": {
    "files": {
      "exclude": [".ultra/"]
    }
  }
}
